<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="light_industry_label"
              pageWidth="50"
              pageHeight="48"
              columnWidth="50"
              leftMargin="0"
              rightMargin="0"
              topMargin="0"
              bottomMargin="0"
              whenNoDataType="AllSectionsNoDetail">

    <property name="net.sf.jasperreports.default.font.name" value="Arial"/>
    <property name="net.sf.jasperreports.default.pdf.font.name" value="Arial"/>

    <parameter name="code" class="java.lang.String"/>
    <parameter name="name" class="java.lang.String"/>
    <parameter name="composition" class="java.lang.String"/>
    <parameter name="size" class="java.lang.String"/>
    <parameter name="color" class="java.lang.String"/>
    <parameter name="country" class="java.lang.String"/>

    <title>
        <band height="48">
            <!-- Наименование + состав -->
            <textField>
                <reportElement x="0" y="0" width="50" height="8"/>
                <textElement>
                    <font size="6"/>
                </textElement>
                <textFieldExpression><![CDATA[
                    ($P{name} != null ? "Трусы муж." : "Трусы муж.") + 
                    " " + 
                    ($P{composition} != null ? $P{composition} : "100% хлопок")
                ]]></textFieldExpression>
            </textField>

            <!-- Цвет -->
            <textField>
                <reportElement x="0" y="8" width="50" height="6"/>
                <textElement>
                    <font size="6"/>
                </textElement>
                <textFieldExpression><![CDATA[
                    $P{color} != null ? $P{color} : "мультиколор"
                ]]></textFieldExpression>
            </textField>

            <!-- Размер (крупно) -->
            <textField>
                <reportElement x="0" y="14" width="50" height="10"/>
                <textElement textAlignment="Center">
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[
                    $P{size} != null ? $P{size} : "ONESIZE"
                ]]></textFieldExpression>
            </textField>

            <!-- Страна -->
            <textField>
                <reportElement x="0" y="24" width="50" height="6"/>
                <textElement textAlignment="Center">
                    <font size="6"/>
                </textElement>
                <textFieldExpression><![CDATA[
                    $P{country} != null ? $P{country} : "Турция"
                ]]></textFieldExpression>
            </textField>

            <!-- Data Matrix код -->
            <image scaleImage="RetainShape" onErrorType="Blank">
                <reportElement x="10" y="30" width="30" height="18"/>
                <imageExpression><![CDATA[$P{code}]]></imageExpression>
            </image>
        </band>
    </title>
</jasperReport>